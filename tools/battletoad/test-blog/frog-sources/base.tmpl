      printGoatLine('   /        \\ ');
      printGoatLine('  /    __/   \\ ');
      printGoatLine(' /,  _/ \     \\_');
      printGoatLine(' `-./ )  |     ~^~^~^~^~^~^~^~\\~.');
      printGoatLine('     (   /                     \\_}');
      printGoatLine('        |               /      |');
      printGoatLine('        ;     |         \\      /');
      printGoatLine('         \\/ ,/           \\    |');
      printGoatLine('         / /~~|~|~~~~~~|~|\\   |');
      printGoatLine('        / /   | |      | | `\\ \\ ');
      printGoatLine('       / /    | |      | |   \\ \\ ');
      printGoatLine('      / (     | |      | |    \\ \\ ');
      printGoatLine('     /,_)    /__)     /__)   /,_/');
      printGoatLine(String.raw`'''''"""""'''""""""'''""""""''"""""''''`);
      printGoatLine('');
      console.log(`%c${spacer}ASCII art credit: http://www.ascii-art.de/ascii/ghi/goat.txt`, 'text-align: right; color: #111; font-size: 16px');
    </script>
